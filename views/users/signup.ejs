<% layout("/layouts/boilerplate") %>
<style>
  h1{
    color: brown;
    font-size: 2.5rem;
    
  }
</style>

<div class="row mt-3">
  
  <h1 class="col-9 mt-4 ms-auto">Sign Up here!!</h1>
  <div class="col-6 offset-3 mt-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username :</label>
        <input
          name="username"
          class="form-control"
          type="text"
          id="username"
          required
        />

        <div class="valid-feedback">Looks good!</div>
      </div>


      <div class="mb-3">
        <label for="email" class="form-label">Email :</label>
        <input
          name="email"
          class="form-control"
          type="email"
          id="email"
          required
        />

        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label for="Password" class="form-label">Password :</label>
        <input
          name="password"
          class="form-control"
          type="password"
          id="password"
          required
        />

        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success">signup</button>
    </form>
  </div>
</div>
