<% layout("/layouts/boilerplate") %>
<style>
  h1{
    color: brown;
    font-size: 2.5rem;
    
  }
</style>
<div class="row mt-3">
  <h1 class="col-9 mt-4 ms-auto">Login</h1>

  <div class="col-6 offset-3 mt-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username :</label>
        <input
          name="username"
          class="form-control"
          type="text"
          id="username"
          required
        />

       
      </div>



      <div class="mb-3">
        <label for="Password" class="form-label">Password :</label>
        <input
          name="password"
          class="form-control"
          type="password"
          id="password"
          required
        />

      </div>
      <button class="btn btn-success">login</button>
    </form>
  </div>
</div>
