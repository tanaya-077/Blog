<% layout("/layouts/boilerplate") %>
<style>
  .show{
    background-color: rgb(128, 128, 128,0.2);
    }
</style>

<div class="show card mt-4">
  <div class="card-body">
    <h1 class="card-title"><%= blog.title %></h1>
    <p class="card-text"><%= blog.content %></p>
    <a href="/allBlog" class="btn btn-light mb-2">Back</a>
    <a href="/blogs/<%= blog.id %>/edit" class="btn btn-light mb-2">Edit</a>
  </div>

  <form action="/blogs/<%= blog.id %>?_method=DELETE" method="POST" class="mb-2 p-2">
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
</div>

